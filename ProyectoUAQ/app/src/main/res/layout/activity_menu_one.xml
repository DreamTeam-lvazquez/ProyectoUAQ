<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/propuesta"
    tools:context="com.example.vazquez.proyectouaq.MenuOne">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark2"
                android:gravity="bottom"
                android:text="Caso clinico 1"
                android:textAlignment="center"
                android:textColor="#91c8d6"
                android:textSize="22sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="bottom"
                android:background="@color/white"
                android:backgroundTint="@color/color_degra"
                android:text="Paciente femenino de 30 años de complexión ectomorfa acude a servicio en fisioterapia refiriendo tener dolor en cuello y disminución en la movilidad articular. El dolor lo refiere 8/10 en escala verbal numérica de tipo localizado, opresivo e inconstante, que se irradia al hombro y aumenta al elevar el brazo por encima del nivel de la cabeza; así como se mitiga con calor. "
                android:textAlignment="center"
                android:textColor="#0a0a09"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:backgroundTint="@color/color_degra"
                android:text="Exploración física"
                android:textAlignment="center"
                android:textColor="#376273"
                android:textStyle="bold"
                android:textSize="22sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:gravity="bottom"
                    android:background="@color/white"
                    android:backgroundTint="@color/color_degra"
                    android:text="A la palpación se encuentra presencia de bandas tensas en trapecio superior derecho que a la digito presión irradia hacia hombro. Rangos de movimiento en cuello disminuidos y fuerza generalizada 3/5 con presencia de dolor."
                    android:textAlignment="center"
                    android:textColor="#09090a"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/crafts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:backgroundTint="@color/color_degra"
                    android:onClick="nextActivity1"
                    android:src="@drawable/cuestionary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
